<Window x:Class="Quiz3.Task3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz3"
        mc:Ignorable="d"
        Title="Task3" Height="200" Width="300" Background="LightBlue">
    <StackPanel Margin="20" HorizontalAlignment="Center">
        <Label Content="Test Data :" FontWeight="Bold"/>
        <TextBlock x:Name="txtData" Text="{Binding}"/>
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <Label Content="Minimum Value :" FontWeight="Bold"/>
            <TextBox x:Name="txtMinimum" Width="50" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
        </StackPanel>
        <Button x:Name="btnOutput" Content="Show Output" Click="btnOutput_Click" Padding="5"/>

    </StackPanel>
</Window>
